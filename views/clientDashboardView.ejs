  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Welcome <%= firstName %></h1>
      <p>Dashboard</p>
      <div class="button-container">
        <a href="/client/create-project" class="add-project-btn"> Add a Project </a>
      </div>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
          <div class="row">

            <!-- Top Selling -->
             <% projects.forEach((project)=>{%>
            <div class="col-12">
              <div class="card top-selling overflow-auto">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Today</a></li>
                    <li><a class="dropdown-item" href="#">This Month</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                  </ul>
                </div>

                <div class="card-body pb-0">
                  <h5 class="card-title"><%= project.title %> <span>| <%= new Date(project.createdAt).toLocaleDateString()%> </span></h5>

                  <table class="table table-borderless">
                    <thead>
                      <tr>
                        <th scope="col">Freelancers</th>
                        <th scope="col">Date of delivery</th>
                        <th scope="col">Quotation</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (project.projectBids && project.projectBids.length > 0) { %>
                        <% project.projectBids.forEach((bid) => { %>
                          <tr>
                            <td><a href="#" class="text-primary fw-bold"><%= bid.freelancer ? bid.freelancer.firstName : 'Unknown' %></a></td>
                            <td><%= bid.estimatedDateOfDelivery ? new Date(bid.estimatedDateOfDelivery).toLocaleDateString() : 'N/A' %></td>
                            <td class="fw-bold">₹ <%= bid.bidAmmount.toLocaleString() || 'N/A' %></td>
                            <td>
                              <!-- Inside the loop where you display bids in the client's dashboard -->
                              <form action="/client/assign-work" method="POST">
                                <input type="hidden" name="projectId" value="<%= project.id %>">
                                <input type="hidden" name="freelancerId" value="<%= bid.userId %>">
                                <button class="assign-btn" type="submit">Assign</button>
                              </form>
                            </td>
                          </tr>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="4">No bids available for this project.</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <% }) %>
            <!-- End Top Selling -->

          </div>
        </div><!-- End Left side columns -->

        <!-- Right side columns -->
        <div class="col-lg-4">

          <!-- All Projects -->
          <div class="card">

            <div class="card-body">
              <h5 class="card-title">All Projects</h5>
              <ul class="project-list">
                <li class="project-header">
                  <span class="project-title">Title</span>
                  <span class="project-budget">Budget (₹)</span>
                </li>
                <% projects.forEach((project) => { %>
                  <li class="project-item">
                    <span class="project-title"><%= project.title %></span>
                    <span class="project-budget"><%= project.budget.toLocaleString() %></span>
                  </li>
                <% }) %>
              </ul>
            </div>
            
          </div><!-- End Recent Activity -->

        </div><!-- End Right side columns -->

      </div>
    </section>

